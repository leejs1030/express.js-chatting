extends ../layout.pug

block title
    | Sign Up

block page_title
    br
    br
    | Sign Up

block buttons
    a.btn.btn-info.mr-2(href='/auth/sign-in') Sign In

block content
    .container.mb-4
        form.col-lg-6(method='post')
            .input-group.mb-2
                .input-group-prepend
                    span.input-group-text#username-addon Id
                input.form-control#username(name='id',
                                            type='text',
                                            aria-label='id',
                                            aria-describedby='username-addon')
            .input-group.mb-2
                .input-group-prepend
                    span.input-group-text#password-addon Password
                input.form-control#password(name='password',
                                            type='password',
                                            aria-label='Password',
                                            aria-describedby='password-addon')
            .input-group.mb-2
                .input-group-prepend
                    span.input-group-text#displayName-addon Nick Name
                input.form-control#displayName(name='nick',
                                                type='text',
                                                aria-label='Nick Name',
                                                aria-describedby='displayName-addon')
            button.btn.btn-primary(type='submit') Sign Up
